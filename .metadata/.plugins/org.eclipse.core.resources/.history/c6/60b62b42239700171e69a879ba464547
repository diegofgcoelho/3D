#ifndef MATCHSET_H_
#define MATCHSET_H_

#include "Includes.h"

using namespace std;
using namespace cv;
using namespace cv::xfeatures2d;

class MatchSet {
public:
	MatchSet();
	virtual ~MatchSet();
	int generateKeyPoints&Descriptors();
	int matchKeyPoints(unsigned int nNeighbors);
	vector<vector<vector<DMatch> > > getMatches();

private:
	FrameSet frameSet;
	vector<vector<KeyPoint> > keypoints;
	vector<Mat> descriptos;
	vector<vector<vector<DMatch> > > matches;
};

#endif /* MATCHSET_H_ */
